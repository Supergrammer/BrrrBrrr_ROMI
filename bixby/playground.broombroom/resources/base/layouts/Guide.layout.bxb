              //       }
              //       route { UpdateOrder }
              //       route { SelectPlace }
              //       value: SelectedPlaceName$expr(place.placeName)
              //     }
              //   }
              // }
            }
          }
        }
      }
      section {
        title {
          template (행사)
        }
        content {
          for-each (commitOrder.order.item.placeAndEvent.events) {
            as (event) {
              image-card {
                image-url {
                  template ("#{value(event.thumbUrl)}")
                }
                image-object-position (Center)
                title-area {
                  halign (Start)
                  slot1 {
                    text {
                      value {
                        template ("#{value(event.eventName)}")
                      }
                      style (Title_S)
                    }
                  }
                }
                on-click {
                  intent {
