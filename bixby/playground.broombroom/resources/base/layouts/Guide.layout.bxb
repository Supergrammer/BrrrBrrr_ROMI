layout-macro-def (Guide) {
  params {
    param (commitOrder) {
      type (CommitOrder)
    }
  }
  content {
    layout {
      section {
        title {
          template (장소)
        }
        content {
          for-each (commitOrder.order.item.placeAndEvent.places) {
            as (place) {
              image-card {
                image-url {
                  template ("#{value(place.thumbUrl)}")
                }
                image-object-position (Center)
                column-size (Two)
                title-area {
                  halign (Start)
                  slot1 {
                    text {
                      value {
                        template ("#{value(place.placeName)}")
                      }
                      style (Detail_L)
                    }
                  }
                }
                on-click {
                  intent {
                    goal {
                      CommitOrder
                      @context (Continuation) { Order }
                    }
                    route { UpdateOrder }
                    route { SelectDestination }
                    value: SearchTerm$expr(place.placeName)
                  }
                }
              }
              // thumbnail-card {
