action (UpdateOrder) {
  type (UpdateTransaction)
  collect {
    //the order that is updated
    input (order) {
      type (Order)
      min (Required)
    }
    input-group (updates){
      requires (OneOrMoreOf)
      collect {
        input (changedAuthenticationState) {
          type (ChangedAuthenticationState)
          min (Optional)
          max (One)
        }
        input (addGuideType) {
          type (AddGuideType)
          min (Optional)
          max (One)
        }
        input (searchTerm) {
          type (SearchTerm)
          min (Optional)
          max (One)
        }
        input (isArrived) {
          type (IsArrived)
          min (Optional)
          max (One)
        }
      }
    }
  }
  //returns the updated order
  output (Order) {
    // throws {

    //    error(NoItems) {
    //     on-catch {
    //       halt {
    //         dialog {
    //           template-macro (NoItemsInCart)
    //         }
    //       }
    //     }
    //   }
    // }
  }
}
